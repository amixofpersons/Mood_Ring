<div id="mood-selection">
  <h1>How are you feeling?</h1>
  <button class="emotion" id="upbeat"> <span> Happy </span>  </button>
  <button class="emotion" id="melancholy">Melancholy</button>
  <button class="emotion" id="excited">Excited</button>
  <button class="emotion" id="chill">Chill</button>
  <button class="emotion" id="unhappy">Angry</button>
</div>

<div id="slides" >
  <div id="slide1">
    <a href="#" id="hide">hide</a>
    <h1>FIRST SLIDE TEST</h1>
    <a href="#" id="submit">Submit form</a>
  </div>

  <div class="" id="slide2">
    <h1>SECOND SLIDE TEST</h1>
    <a href="#" id="next-slide">click for next slide</a>
    <button class="emotion" id="upbeat">Happy</button>
    <button class="emotion" id="melancholy">Melancholy</button>
    <button class="emotion" id="excited">Excited</button>
    <button class="emotion" id="chill">Chill</button>
    <button class="emotion" id="unhappy">Angry</button>
  </div>

  <div id="slide3">
    <h1>THIRD SLIDE TEST</h1>
    <a href="#" id="finish">finish</a>
  </div>
</div>

