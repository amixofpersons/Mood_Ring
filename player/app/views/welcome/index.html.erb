<button class='btn' id = "play">play</button>
<button class='btn' id = "pause">pause</button>

<h1>What genre of music do you want to listen to?</h1>

<%= form_tag(controller: "welcome", method: "get") do %>
  <%= label_tag(:genre, "I want to hear..") %>
  <%= text_field_tag(:genre) %>
  <%= submit_tag("Listen") %>
<% end %>

<div>
  <% @tracks.each do |track| %>
    <%= track["permalink_url"] %>
    <%= track["id"] %>
  <% end %>
</div>
